<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bootstrap_thumbnail_block.block.class">AlphaLemon\Block\BootstrapThumbnailBlockBundle\Core\Block\AlBlockManagerBootstrapThumbnailBlock</parameter>
        <parameter key="bootstrapthumbnailblock.form.class">AlphaLemon\Block\BootstrapThumbnailBlockBundle\Core\Form\AlThumbnailType</parameter>
    </parameters>

    <services>
        <service id="bootstrap_thumbnail_block.block" class="%bootstrap_thumbnail_block.block.class%">
            <tag name="alphalemon_cms.blocks_factory.block" description="Thumbnail" type="BootstrapThumbnailBlock" group="bootstrap,Twitter Bootstrap" />
            <argument type="service" id="service_container" />
        </service>
        
        <service id="bootstrapthumbnailblock.form" class="%bootstrapthumbnailblock.form.class%">
        </service>
    </services>
</container>
